{
  "name": "react-enable",
  "version": "3.0.0",
  "description": "feature flags to enable and disable functionality at runtime in a react application",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "lib": "es2015",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "npx jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pliosoft/react-enable.git"
  },
  "keywords": [
    "feature",
    "flag",
    "enable",
    "toggle"
  ],
  "author": "Christopher Lord",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pliosoft/react-enable/issues"
  },
  "homepage": "https://github.com/pliosoft/react-enable#readme",
  "peerDependencies": {
    "react": "^17 | ^18",
    "tslib": "^1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5",
    "@types/jest": "^26",
    "@types/react": "^17",
    "jest": "^26",
    "react": "^17 || ^18",
    "react-test-renderer": "^17",
    "ts-jest": "^26",
    "tslib": "^1",
    "typescript": "^4"
  },
  "dependencies": {
    "@xstate/react": "^3.0.0",
    "prettier": "^2.6.2",
    "xstate": "^4.31.0"
  }
}
